<div class="section section--atmosphere">

  <div class="section__heading">
      <h4 class="section__heading__title">
        <span class="section__heading__title__text">{{name}}</span>
        <span class="atmosphere__rename">
          <i class="fa fa-pencil-alt" aria-hidden="true"></i>
        </span>
      </h4>
      <div class="btn btn--drag btn--medium btn--inverted">
        <div class="btn__inner">
          <i class="fa fa-arrows-alt-v" aria-hidden="true"></i>
        </div>
      </div>
      <div class="btn btn--delete btn--medium">
        <div class="btn__inner">
          <i class="fa fa-times" aria-hidden="true"></i>
        </div>
      </div>
  </div>

  <div class="section__body">
    <div class="wrapper">
      <div class="section__flex">

        <div class="volume section__flex__item">
          <input type="range" min="0" max="1" value="1" step="0.05">
          <label class="control control--custom control--checkbox volume__mute">
            <input type="checkbox" class="btn--mute">
            <div class="control__indicator control__indicator--medium"></div>
            <div class="control--custom__on"><i class="fa fa-volume-off" aria-hidden="true"></i></div>
            <div class="control--custom__off"><i class="fa fa-volume-up" aria-hidden="true"></i></div>
          </label>
        </div>
        <div class="section__flex__item">
          <div class="btn-pair">
            <div class="atmosphere__replace btn btn--rounded btn--medium tooltip">
              <span class="tooltiptext tooltiptext--right tooltiptext--prewritten">Replace</span>
              <div class="btn__inner">
                <i class="fa fa-play" aria-hidden="true"></i>
              </div>
            </div>
            <div class="atmosphere__add btn btn--rounded btn--medium tooltip">
              <span class="tooltiptext tooltiptext--right tooltiptext--prewritten">Add</span>
              <div class="btn__inner">
                <i class="fa fa-play" aria-hidden="true"></i>
              </div>
                <i class="fa fa-plus btn__bottom-right" aria-hidden="true"></i>
            </div>
          </div>

          <div class="btn btn--stop btn--rounded btn--medium">
            <div class="btn__inner">
              <i class="fa fa-stop" aria-hidden="true"></i>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>

</div>