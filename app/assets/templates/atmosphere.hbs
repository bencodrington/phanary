<div class="card card--atmosphere">

  <div class="card__header">
    <div class="card__header__icon">
      {{!-- TODO: card icon --}}
    </div>
    <span class="card__header__title">{{name}}</span>
    {{!-- TODO: rename icon --}}
    <div class="btn btn--square btn--transparent card__header__rename">
      <div class="btn__inner">
        <i class="fa fa-pencil-alt" aria-hidden="true"></i>
      </div>
    </div>
    <div class="flex__spacer"></div>
    {{!-- TODO: reorder button icons for mobile --}}
    <div class="btn btn--reorder btn--reorder-up btn--square">
      <div class="btn__inner">
        <i class="fa fa-arrow-up" aria-hidden="true"></i>
      </div>
    </div>
    <div class="btn btn--reorder btn--reorder-down btn--square">
      <div class="btn__inner">
        <i class="fa fa-arrow-down" aria-hidden="true"></i>
      </div>
    </div>
    {{!-- TODO: drag/reorder button icon --}}
    <div class="btn btn--square btn--drag">
      <div class="btn__inner">
        <i class="fa fa-arrows-alt-v" aria-hidden="true"></i>
      </div>
    </div>
    <div class="btn btn--square btn--delete">
      <div class="btn__inner">
        <i class="fa fa-times" aria-hidden="true"></i>
      </div>
    </div>
  </div>

  <div class="card__body">

    <div class="card__body__atmosphere-controls">
      {{!-- TODO: transition button icon --}}
      <div class="btn atmosphere__replace">
        <div class="btn__inner">
          Transition To
        </div>
      </div>
      {{!-- TODO: layer button icon --}}
      <div class="btn atmosphere__add">
        <div class="btn__inner">
          Layer On Top
        </div>
      </div>
      {{!-- TODO: stop icon --}}
      <div class="btn atmosphere__stop">
        <div class="btn__inner">
          Stop
        </div>
      </div>
    </div>

    {{!-- TODO: volume control icons --}}
    <div class="volume">
      <input type="range" min="0" max="1" value="1" step="0.05">
      <label class="checkbox volume__mute">
        <input type="checkbox">
        <div class="checkbox__indicator checkbox__indicator--medium"></div>
        <div class="checkbox__on"><i class="fa fa-volume-off" aria-hidden="true"></i></div>
        <div class="checkbox__off"><i class="fa fa-volume-up" aria-hidden="true"></i></div>
      </label>
    </div>
    

  </div>

</div>