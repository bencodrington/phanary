<div class="section section--track" data-atmosphere="{{atmosphereId}}">
    <div class="section__heading">
        <h4 class="section__heading__title">
            <span class="section__heading__title__text">{{name}}</span>
        </h4>
        <div class="btn btn--delete btn--medium btn--inverted">
            <div class="btn__inner">
            <i class="fa fa-close" aria-hidden="true"></i>
            </div>
        </div>
    </div>
    <div class="section__body">
        <div class="wrapper">

            {{#if source}}
            <span>Source:
                <span class="source">{{source}}</span>
            </span>
            {{/if}}
            {{#if tags}}
            <span class="tags">Tags:
                {{#each tags}}
                    <span class="tag">{{this}}</span>
                {{/each}}
            </span>
            {{/if}}
            
            <div class="section__flex section__flex--spacing section__flex--wrap">
                <div class="section__flex__item section__flex__item--grow progress">
                    <div class="progress__bar"></div>
                </div>

                <span class="section__flex__item"><span class="oneshot-play-text">Play</span> every</span>
                <div class="btn-pair btn-pair--inline section__flex__item">
                    <div class="btn--more btn btn--rounded btn--medium oneshot-min">
                        <div class="btn__inner">
                            <i class="fa fa-plus" aria-hidden="true"></i>
                        </div>
                    </div>
                    <div class="btn--less btn btn--rounded btn--medium oneshot-min">
                        <div class="btn__inner">
                            <i class="fa fa-minus" aria-hidden="true"></i>
                        </div>
                    </div>
                </div>
                <span class="section__flex__item">
                    <span class="oneshot-min-label">MIN</span>
                    <span>to</span>
                </span>
                <div class="btn-pair btn-pair--inline section__flex__item">
                    <div class="btn--more btn btn--rounded btn--medium oneshot-max">
                        <div class="btn__inner">
                            <i class="fa fa-plus" aria-hidden="true"></i>
                        </div>
                    </div>
                    <div class="btn--less btn btn--rounded btn--medium oneshot-max">
                        <div class="btn__inner">
                            <i class="fa fa-minus" aria-hidden="true"></i>
                        </div>
                    </div>
                </div>
                <span class="section__flex__item">
                    <span class="oneshot-max-label">MAX</span>
                    <span>seconds</span>
                </span>

            </div>

            <div class="section__flex section__flex--spacing">
                <div class="volume section__flex__item">
                    <input type="range" min="0" max="1" value="1" step="0.05">
                    <label class="control control--checkbox control--custom volume__mute">
                        <input type="checkbox" class="btn--mute">
                        <div class="control__indicator control__indicator--medium"></div>
                        <div class="control--custom__on"><i class="fa fa-volume-off" aria-hidden="true"></i></div>
                        <div class="control--custom__off"><i class="fa fa-volume-up" aria-hidden="true"></i></div>
                    </label>
                </div>
                <div class="btn--play btn btn--rounded btn--medium-text section__flex__item">
                    <div class="btn__inner">
                        <span>Play Once</span>
                    </div>
                </div>
                <div class="section__flex__item">
                    <!-- TODO: disabled/enabled -->
                    <div class="btn--start btn btn--rounded btn--medium">
                        <div class="btn__inner">
                            <i class="fa fa-play-circle-o" aria-hidden="true"></i>
                        </div>
                    </div>
                    <div class="btn--stop btn btn--rounded btn--medium">
                        <div class="btn__inner">
                            <i class="fa fa-stop-circle-o" aria-hidden="true"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>